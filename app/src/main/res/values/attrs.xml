<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Reservation states -->
    <!-- Event is reservable; user has no reservation status-->
    <attr name="state_reservable" format="boolean" />
    <!-- Event is not reservable -->
    <attr name="state_reservation_disabled" format="boolean" />
    <!-- Event is reservable; user can join wait list -->
    <attr name="state_wait_list_available" format="boolean" />
    <!-- Reservation request is pending for this event -->
    <attr name="state_reservation_pending" format="boolean" />
    <!-- User has reserved a seat for the event -->
    <attr name="state_reserved" format="boolean" />
    <!-- User is on the wait list for the event -->
    <attr name="state_wait_listed" format="boolean" />

    <attr name="verticalBias" format="float" />

    <declare-styleable name="Theme">
        <!-- Navigation bar divider color, used by NavigationBarContentFrameLayout -->
        <attr name="ioschedNavigationBarDividerColor" format="color" />

        <attr name="colorControlLight" format="color" />

        <attr name="sessionListKeyline" format="dimension" />

        <attr name="eventCardHeaderBackground" format="reference|color" />

        <attr name="colorSurfaceSecondary" format="color" />
    </declare-styleable>

    <declare-styleable name="TimeHeader">
        <attr name="android:width" />
        <attr name="android:padding" />
        <attr name="android:textColor" />
        <attr name="android:fontFamily" />
        <attr name="timeTextSize" format="dimension" />
        <attr name="meridiemTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DateHeader">
        <attr name="android:width" />
        <attr name="android:height" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:fontFamily" />
        <attr name="verticalBias" />
    </declare-styleable>

    <declare-styleable name="ReserveButton">
        <attr name="state_reservable" />
        <attr name="state_reserved" />
        <attr name="state_reservation_disabled" />
        <attr name="state_wait_list_available" />
        <attr name="state_wait_listed" />
        <attr name="state_reservation_pending" />
    </declare-styleable>

    <declare-styleable name="EventCardView">
        <attr name="eventTitle" format="string" />
        <attr name="eventDescription" format="string" />
        <attr name="eventTypeLogo" format="reference" />
        <attr name="eventTypeLogoBackground" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="CollapsibleCard">
        <attr name="cardTitle" format="string" />
        <attr name="cardDescription" format="string" />
    </declare-styleable>

    <declare-styleable name="DayIndicatorDecoration">
        <attr name="android:color" />
        <attr name="insetHorizontal" format="dimension" />
        <attr name="insetVertical" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DaySeparatorDecoration">
        <attr name="android:width" />
        <attr name="android:height" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:fontFamily" />
        <attr name="verticalBias" />
    </declare-styleable>

    <declare-styleable name="NavigationBarContentFrameLayout">
        <attr name="navigationBarBorderColor" format="color" />
        <attr name="navigationBarBorderSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="HashtagIoDecoration">
        <attr name="android:drawable" />
        <attr name="margin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeColor" format="color" />
    </declare-styleable>

    <!-- AvatarImageBehavior -->
    <declare-styleable name="AvatarBehavior">
        <attr name="finalYyPosition" format="dimension" />
        <attr name="startXxPosition" format="dimension" />
        <attr name="startToolbarPositions" format="dimension" />
        <attr name="startHeights" format="dimension" />
        <attr name="finalHeights" format="dimension" />
        <attr name="finalSize" format="dimension" />
        <attr name="finalXx" format="dimension" />
        <attr name="toolBarHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FilletImageView">
        <attr name="radius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SquareImageView">
        <attr name="strokeWidth" />
        <attr name="strokeColor" />
    </declare-styleable>

</resources>